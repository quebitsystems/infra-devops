---
apiVersion: v1
kind: Namespace
metadata:
  name: {{ kong_namespace }}
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: kong-serviceaccount
  namespace: {{ kong_namespace }}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: kong-ingress-clusterrole
rules:
  - apiGroups: [""]
    resources: ["endpoints", "nodes", "pods", "secrets", "services", "namespaces"]
    verbs: ["list", "watch", "get"]
  - apiGroups: [""]
    resources: ["events"]
    verbs: ["create", "patch"]
  - apiGroups: [""]
    resources: ["services/status"]
    verbs: ["get", "patch", "update"]
  - apiGroups: ["networking.k8s.io"]
    resources: ["ingresses"]
    verbs: ["get", "list", "watch"]
  - apiGroups: ["networking.k8s.io"]
    resources: ["ingresses/status"]
    verbs: ["get", "patch", "update"]
  - apiGroups: ["networking.k8s.io"]
    resources: ["ingressclasses"]
    verbs: ["get", "list", "watch"]
  - apiGroups: ["configuration.konghq.com"]
    resources: ["*"]
    verbs: ["get", "list", "watch"]
  - apiGroups: ["configuration.konghq.com"]
    resources: ["*/status"]
    verbs: ["get", "patch", "update"]
  - apiGroups: ["gateway.networking.k8s.io"]
    resources: ["gateways", "gatewayclasses", "httproutes", "referencegrants", "tcproutes", "udproutes", "tlsroutes", "grpcroutes"]
    verbs: ["get", "list", "watch"]
  - apiGroups: ["gateway.networking.k8s.io"]
    resources: ["gateways/status", "httproutes/status", "tcproutes/status", "udproutes/status", "tlsroutes/status", "grpcroutes/status"]
    verbs: ["get", "update"]
  - apiGroups: ["discovery.k8s.io"]
    resources: ["endpointslices"]
    verbs: ["get", "list", "watch"]
  - apiGroups: ["coordination.k8s.io"]
    resources: ["leases"]
    verbs: ["get", "list", "watch", "create", "update", "patch", "delete"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: kong-ingress-clusterrole-binding
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: kong-ingress-clusterrole
subjects:
  - kind: ServiceAccount
    name: kong-serviceaccount
    namespace: {{ kong_namespace }}
---
apiVersion: v1
kind: Service
metadata:
  name: kong-proxy
  namespace: {{ kong_namespace }}
  labels:
    app: kong
spec:
  type: NodePort
  ports:
    - name: http
      port: 80
      targetPort: 8000
      nodePort: 30080
      protocol: TCP
    - name: https
      port: 443
      targetPort: 8443
      nodePort: 30443
      protocol: TCP
  selector:
    app: kong
    component: gateway
---
apiVersion: v1
kind: Service
metadata:
  name: kong-admin
  namespace: {{ kong_namespace }}
  labels:
    app: kong
spec:
  type: ClusterIP
  clusterIP: None
  ports:
    - name: admin-tls
      port: 8444
      targetPort: 8444
      protocol: TCP
  selector:
    app: kong
    component: gateway
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: kong-gateway
  namespace: {{ kong_namespace }}
  labels:
    app: kong
    component: gateway
spec:
  replicas: 1
  selector:
    matchLabels:
      app: kong
      component: gateway
  template:
    metadata:
      labels:
        app: kong
        component: gateway
    spec:
      serviceAccountName: kong-serviceaccount
      containers:
        - name: kong-gateway
          image: kong:3.9
          ports:
            - name: http-proxy
              containerPort: 8000
            - name: https-proxy
              containerPort: 8443
            - name: admin-tls
              containerPort: 8444
            - name: status
              containerPort: 8100
          env:
            - name: KONG_DATABASE
              value: "off"
            - name: KONG_PROXY_LISTEN
              value: "0.0.0.0:8000 reuseport backlog=16384, 0.0.0.0:8443 http2 ssl reuseport backlog=16384"
            - name: KONG_ADMIN_LISTEN
              value: "0.0.0.0:8444 http2 ssl reuseport backlog=16384"
            - name: KONG_STATUS_LISTEN
              value: "0.0.0.0:8100"
            - name: KONG_ADMIN_ACCESS_LOG
              value: "/dev/stdout"
            - name: KONG_ADMIN_ERROR_LOG
              value: "/dev/stderr"
            - name: KONG_PROXY_ACCESS_LOG
              value: "/dev/stdout"
            - name: KONG_PROXY_ERROR_LOG
              value: "/dev/stderr"
            - name: KONG_HEADERS
              value: "off"
          readinessProbe:
            httpGet:
              path: /status
              port: 8100
            initialDelaySeconds: 10
            periodSeconds: 10
          livenessProbe:
            httpGet:
              path: /status
              port: 8100
            initialDelaySeconds: 30
            periodSeconds: 15
          resources:
            requests:
              cpu: 100m
              memory: 256Mi
            limits:
              cpu: "1"
              memory: 1Gi
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: kong-controller
  namespace: {{ kong_namespace }}
  labels:
    app: kong
    component: controller
spec:
  replicas: 1
  selector:
    matchLabels:
      app: kong
      component: controller
  template:
    metadata:
      labels:
        app: kong
        component: controller
    spec:
      serviceAccountName: kong-serviceaccount
      containers:
        - name: ingress-controller
          image: kong/kubernetes-ingress-controller:3.4
          args:
            - --kong-admin-url=https://kong-admin.{{ kong_namespace }}.svc:8444
            - --kong-admin-tls-skip-verify
            - --publish-service={{ kong_namespace }}/kong-proxy
            - --ingress-class=kong
            - --election-id=kong-ingress-controller-leader
          ports:
            - name: health
              containerPort: 10254
          env:
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: POD_NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
          readinessProbe:
            httpGet:
              path: /healthz
              port: 10254
            initialDelaySeconds: 10
            periodSeconds: 10
          livenessProbe:
            httpGet:
              path: /healthz
              port: 10254
            initialDelaySeconds: 30
            periodSeconds: 15
          resources:
            requests:
              cpu: 50m
              memory: 64Mi
            limits:
              cpu: 250m
              memory: 256Mi
---
apiVersion: networking.k8s.io/v1
kind: IngressClass
metadata:
  name: kong
  annotations:
    ingressclass.kubernetes.io/is-default-class: "true"
spec:
  controller: ingress-controllers.konghq.com/kong
